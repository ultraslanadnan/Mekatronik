@model Mekatronik.CustomModels.ProductWithFile

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string pg = "1";
    if((Url.ActionContext.HttpContext.Request.Query["pg"].ToString()) != null)
    {
        pg = Url.ActionContext.HttpContext.Request.Query["pg"].ToString();
    }
}



<h4>Edit Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Edit" asp-route-id="@Model.ProductID" asp-route-pg="@pg">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductID" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductImage" class="control-label"></label>
                 <input  type="file" class="file" data-show-preview="false" asp-for="ProductImage" >
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label class="control-label">Current Image</label>
                 <img src= "@(@Model.ProductImageStr)" class="img-fluid" style="width:30px; height:45px;" alt="Image" />
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCode" class="control-label"></label>
                <input asp-for="ProductCode" class="form-control" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
           
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ProductStatus" /> @Html.DisplayNameFor(model => model.ProductStatus)
                </label>
            </div>
            <div class="form-group mb-1">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

 <div class="form-group">
    <a class="btn btn-secondary"  asp-action="Index" asp-route-pg="@pg">Back to List</a>
</div>

